<h1>Burger Project</h1>

<h2>Ready To Eat</h2>

<ul>
  {{#each burger}}
  {{#unless eaten}}
  {{> cats/cat-block sleep=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each burger}}
  {{#if sleepy}}
  {{> cats/cat-block sleep=false}}
  {{/if}}
  {{/each}}
</ul>


<h2>Add A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>